[supervisord]
nodaemon=true

[program:docker]
command=/bin/bash -c "source /bin/docker_run.sh && exec $DOCKER daemon --debug"
stdout_logfile=/dev/stdout
stdout_logfile_maxbytes=0
stderr_logfile=/dev/stderr
stderr_logfile_maxbytes=0

[program:packerd]
command=/opt/go/bin/packerd-server --tls-certificate /etc/ssl/private/temp.crt --tls-key /etc/ssl/private/temp.key --port 64154 --tls-port 64155 --host 0.0.0.0
stdout_logfile=/dev/stdout
stdout_logfile_maxbytes=0
stderr_logfile=/dev/stderr
stderr_logfile_maxbytes=0

[include]
files = /etc/supervisor/conf.d/*.conf

